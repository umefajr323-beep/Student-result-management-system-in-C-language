#include <iostream>
#include <fstream>
#include <vector>
using namespace std;

class Student {
public:
    int roll;
    string name;
    int marks[5];
    int total;
    float average;
    char grade;

    void calculate() {
        total = 0;
        for (int i = 0; i < 5; i++)
            total += marks[i];

        average = total / 5.0;

        if (average >= 90) grade = 'A';
        else if (average >= 75) grade = 'B';
        else if (average >= 60) grade = 'C';
        else if (average >= 40) grade = 'D';
        else grade = 'F';
    }
};

vector<Student> students;
void load() {
    ifstream file("students.dat", ios::binary);
    if (!file) return;

    Student s;
    while (file.read((char*)&s, sizeof(s)))
        students.push_back(s);

    file.close();
}
void save() {
    ofstream file("students.dat", ios::binary | ios::trunc);
    for (auto &s : students)
        file.write((char*)&s, sizeof(s));
    file.close();
}

